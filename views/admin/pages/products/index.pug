extends ../../layouts/default.pug
include ../../../mixins/filtstatus.pug
include ../../../mixins/search.pug
block main
    h1 Đây là trang sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            .row
                .col-6
                    +filtstatus(button)
                .col-6 
                    +search(keyword)

    table.table.table-hover.table-sm
        thead
            tr
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái 
                th Hành động 
        tbody
            each item, index in sanphamadmin
                tr
                    td #{index + 1}
                    td
                        img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                    td #{item.title}
                    td #{item.price}
                    td 
                        if(item.status == "active")
                            a(href="#" class="badge badge-success")  Hoạt động
                        else 
                            a(href="#" class="badge badge-danger")  Dừng hoạt động
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa
    